<div class="cards-container">
  <div class="card-details-showreserv">
    <div class="card-image-showreserv">
      <%= cl_image_tag @reservation.pool.photo.key, class: "top-image"%>
    </div>
    <div class="card-content">
      <h1 class="card-title"><strong>Détails de la réservation</strong></h1>

      <div class="row g-3">
        <div class="col-md-6">
          <strong>Adresse:</strong> <%= @reservation.pool.address %><br>
        </div>
        <div class="col-md-6">
          <label for="pool_photo"></label>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-12 mt-3">
         <p><strong>Date de reservation:</strong> <%= @reservation.start_date %></p>
        <br>
        </div>
      </div>

      <div class="row g-3">
        <div class="col-12 mt-3">
          <% if @reservation.pool.user_id == current_user.id %>
            <div class="d-flex justify-content-between">
              <%= link_to "Modifier cette réservation", edit_pool_reservation_path(@reservation), class: "btn btn-primary modifier-button" %>
              <%= link_to "Supprimer la réservation", reservation_path(@reservation), data: { turbo_method: :delete, turbo_confirm: "Serieux gros?" }, class: "btn btn-primary modifier-button" %>
            </div>
          <% end %>
          <%= link_to "Retour à la liste des réservations", reservations_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
